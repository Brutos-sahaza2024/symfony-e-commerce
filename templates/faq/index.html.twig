{# templates/faq/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-question-circle"></i> FAQ</h1>

        <div class="accordion" id="faqAccordion">
            {% for faq in faqs %}
                <div class="card">
                    <div class="card-header" id="heading{{ faq.id }}">
                        <h2 class="mb-0">
                            <button class="btn " type="button" data-toggle="collapse" data-target="#collapse{{ faq.id }}" aria-expanded="true" aria-controls="collapse{{ faq.id }}">
                                <i class="fas fa-chevron-down"></i> {{ faq.question }}
                            </button>
                        </h2>
                    </div>
                    <div id="collapse{{ faq.id }}" class="collapse" aria-labelledby="heading{{ faq.id }}" data-parent="#faqAccordion">
                        <div class="card-body">
                            <i class="fas fa-info-circle"></i> {{ faq.answer }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

