{% extends 'admin/base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="mb-4">
    <i class="fas fa-list-alt me-2"></i>Category
</h1>

<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_category_index') }}" class="btn btn-secondary d-flex align-items-center mt-3">
    <i class="fas fa-arrow-left me-2"></i>
    back to list
</a>

<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning d-flex align-items-center mt-3">
    <i class="fas fa-edit me-2"></i>
    edit
</a>

{{ include('admin/category/_delete_form.html.twig') }}

{% endblock %}
