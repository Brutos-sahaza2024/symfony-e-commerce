{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1><i class="fas fa-box-open"></i> Product index</h1>

<table class="table">
    <thead>
        <tr>
            <th><i class="fas fa-hashtag"></i> Id</th>
            <th><i class="fas fa-tag"></i> Name</th>
            <th><i class="fas fa-align-justify"></i> Description</th>
            <th><i class="fas fa-euro-sign"></i> Price</th>
            <th><i class="fas fa-calendar-alt"></i> CreatedAt</th>
            <th><i class="fas fa-cogs"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">
                    <i class="fas fa-eye"></i> Show
                </a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_product_new') }}" class="btn btn-success">
    <i class="fas fa-plus"></i> Create new
</a>

{% endblock %}
