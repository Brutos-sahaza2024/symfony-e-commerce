{% extends 'admin/base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1><i class="fas fa-shopping-cart"></i> Order</h1>

<table class="table">
    <tbody>
        <tr>
            <th><i class="fas fa-hashtag"></i> Id</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th><i class="fas fa-euro-sign"></i> TotalPrice</th>
            <td>{{ order.totalPrice }}</td>
        </tr>
        <tr>
            <th><i class="fas fa-clipboard-list"></i> Status</th>
            <td>{{ order.status }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_order_index') }}" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> back to list
</a>

<a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
    <i class="fas fa-edit"></i> edit
</a>


    {{ include('admin/order/_delete_form.html.twig') }}
{% endblock %}
