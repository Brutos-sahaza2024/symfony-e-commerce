{# templates/product/category.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Produits - {{ category }}{% endblock %}

{% block body %}
<div class="container mt-2">
    <h1 class="mb-4">
        <i class="fas fa-tags me-2"></i>Produits dans la catégorie {{ category }}
    </h1>

    {% if products|length > 0 %}
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ product.imageUrl ? product.imageUrl : asset('images/' ~ product.imageFilename) }}" alt="Image for {{ product.name }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                            <p class="card-text"><strong>Prix : {{ product.price }} €</strong></p>
                            <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-warning d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun produit trouvé dans cette catégorie.</p>
    {% endif %}
</div>
{% endblock %}