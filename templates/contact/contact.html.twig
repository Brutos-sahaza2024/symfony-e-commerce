{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
   <h1 class="mb-4">
    <i class="fas fa-envelope"></i> Nous Contacter
</h1>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{{ form_start(form, {'action': path('app_contact'), 'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
        </div>
        {{ form_errors(form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
        </div>
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.message, 'Message', {'label_attr': {'class': 'control-label'}}) }}
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-comment"></i></span>
            </div>
            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre message'}}) }}
        </div>
        {{ form_errors(form.message) }}
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
{{ form_end(form) }}
</div>
 

{% endblock %}

